<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>URL Shortner</title>
</head>

<body>
    <h1>URL Shortener</h1>

    <% if (locals.shortUrl) { %>
        <p>URL Generated : <%= shortUrl %>
        </p>
        <% } %>
        <div class="mb-3">
                <form method="POST" action="/s/url">
                    
                    <div class="row g-3 align-items-center">

                    <div class="col-auto">
                    <label for="originalUrl"  class="col-form-label">
                        URL
                    </label>
                    </div>

                    <div class="col-auto">
                    <input type="text" class="form-control" id="originalUrl" aria-describedby="urlHelp" name="url" placeholder="https://example.com">
                    </div>

                    <div class="col-auto">
                    <span id="urlHelp" class="form-text">
                        Enter the URL you want to make shorter.
                    </span>
                    </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Generate</button>
                </form>
            </div>

            <div class="row g-3 align-items-center">
            
               
              </div>
            <div>
                <% if (locals.urls) { %>
                    <table>
                        <thead>
                            <th>S. No</th>
                            <th>Short Id</th>
                            <th>Original</th>
                            <th>Clicks</th>
                        </thead>
                        <tbody>
                            <% urls.forEach((url, index)=> { %>
                                <tr>
                                    <td> <%= index + 1 %> </td>
                                    <td><%= url.shortId %> </td>
                                    <td><%= url.redirectedUrl %></td>
                                    <td><%= url.clicks %></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
            </div>
</body>

</html>